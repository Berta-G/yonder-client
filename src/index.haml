!!!
%html
  %head
    %meta{charset: "utf-8"}
    %meta{name: "format-detection", content: "telephone=no"}
    %meta{name: "viewport", content: "user-scalable=no, initial-scale=1, maximum-scale=1, minimum-scale=1, width=device-width, height=device-height, target-densitydpi=device-dpi"}
    -# %link{rel: "stylesheet", type: "text/css", href: "css/index.css"}
    %link{rel: "stylesheet", type: "text/css", href: "css/ionic.css"}
    -# %link{rel: "stylesheet", type: "text/css", href: "css/ionic.contrib.frostedGlass.css"}
    %title Уonder!
  %body{"ng-app" => "scupr"}
    .bar.bar-header
      %button.button.button-icon.icon.ion-navicon{onclick: "getBusinessForm();"} 
      %h1.title{}><
        Уonder
        %i{style:"font-family: georgia; font-style: italic; font-size: 110%;"}>< !
      %button.button.button-icon.icon.ion-ios7-arrow-back{onclick: "getBucketWithGPS();"} 
    %ion-content#bucket{"has-header" => "true", "overflow-scroll" => "true", style: "width: 100%; height: 100%+10px;"}

    %script{type: "text/javascript", src: "cordova.js"}
    %script{type: "text/javascript", src: "js/jquery.js"}
    %script{type: "text/javascript", src: "js/handlebars.js"}
    %script{type: "text/javascript", src: "js/ionic.bundle.js"}
    -# %script{type: "text/javascript", src: "js/ionic.contrib.frostedGlass.js"}
    %script{id: 'bucket-template', type: 'text/x-handlebars-template'}     
      .list
        {{#each ads}}
        {{createBucket this}}
        {{/each}}
    %script{id: 'ad-template', type: 'text/x-handlebars-template'}     
      .card
        .item
          %h2 {{ad.business_name}} &middot {{ad.distance}}m
          %p {{ad.caption}}
        .item.item-image
          %img{src: "{{ad.image}}"}
        %a.item.item-icon-left.assertive.item-icon-right{href:'#', onclick: "getMapWithGPS();", "data-lng" => "{{ad.business_GPS.lng}}", "data-lat" => "{{ad.business_GPS.lat}}"}
          %i.icon.ion-ios7-navigate-outline
          Get directions  
          %i.icon.ion-ios7-arrow-down
    %script{id: 'form-template', type: 'text/x-handlebars-template'}
      %form{id: 'new-business'}
        .list
          %button.button{ onclick: "selectPhoto();"}
            Upload File
          %label.item.item-input
            %input{type: "text",  placeholder: "Image", name: 'business-image'}
          %label.item.item-input
            %input{type: "text",  placeholder: "Business name", name: 'business-name'}
          %label.item.item-input
            %input{type: "text",  placeholder: "Radius", name: 'business-radius'}
          %label.item.item-input
            %input{type: "text",  placeholder: "Lng", name: 'business-lng'}
          %label.item.item-input
            %input{type: "text",  placeholder: "Lat", name: 'business-lat'}
          %button.button{ id: "submit-new", onclick: "postNewBusiness();" }
            New Business
    %script{type: "text/javascript", src: "js/local.js"}
    %script{type: "text/javascript", src: "https://maps.googleapis.com/maps/api/js?key=AIzaSyA_PXRhcYPHapEnqn_xw3_6gnIne0zJMXg&sensor=true"}
    %script{type: "text/javascript", src: "js/maps_local.js"}
    %script
      document.addEventListener("deviceready", startApp, false);
    
